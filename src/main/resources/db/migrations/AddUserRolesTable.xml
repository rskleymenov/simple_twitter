<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="03_04_2017" author="Roman Kleimenov">
        <createTable tableName="user_roles">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="INT"/>
            <column name="role" type="VARCHAR(40)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_roles" baseColumnNames="user_id"
                                 constraintName="user_roles_to_user_fk"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addUniqueConstraint tableName="user_roles" columnNames="user_id, role"
                             constraintName="unique_username_role"/>
    </changeSet>
</databaseChangeLog>
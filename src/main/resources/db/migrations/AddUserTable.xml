<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="03_04_2017" author="Roman Kleimenov">
        <createTable tableName="user">
            <column name="id" type="LONG" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="VARCHAR(40)"/>
            <column name="password" type="VARCHAR(40)"/>
            <column name="enabled" type="boolean"/>
        </createTable>

        <addUniqueConstraint tableName="user" columnNames="login" constraintName="unique_login"/>
    </changeSet>
</databaseChangeLog>